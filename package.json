{
  "name": "@debbl/relay",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.30.1",
  "description": "relay",
  "author": "Brendan Dash <me@aiwan.run> (https://aiwan.run)",
  "license": "MIT",
  "homepage": "https://github.com/Debbl/relay#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Debbl/relay.git"
  },
  "bugs": "https://github.com/Debbl/relay/issues",
  "keywords": [],
  "bin": {
    "relay": "./bin/relay.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx ./src/index.ts",
    "build": "tsdown",
    "test": "vitest",
    "i18n:extract": "lingui extract",
    "i18n:compile": "lingui compile",
    "release": "bumpp",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ignore-pattern 'src/i18n/locales/**/*.ts'",
    "lint:fix": "eslint . --fix --ignore-pattern 'src/i18n/locales/**/*.ts'",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@larksuiteoapi/node-sdk": "^1.59.0",
    "@lingui/core": "^5.9.1",
    "@lingui/macro": "^5.9.1",
    "@lingui/message-utils": "^5.9.1"
  },
  "devDependencies": {
    "@debbl/eslint-config": "^3.15.2",
    "@lingui/cli": "^5.9.1",
    "@types/node": "^24.10.13",
    "bumpp": "^10.4.1",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "lingui": {
    "sourceLocale": "en",
    "locales": [
      "en",
      "zh"
    ],
    "catalogs": [
      {
        "path": "src/i18n/locales/{locale}/messages",
        "include": [
          "src"
        ],
        "exclude": [
          "src/i18n/locales/**"
        ]
      }
    ]
  }
}
